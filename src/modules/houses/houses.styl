.houses

  &__items
    display: flex;
    flex-wrap wrap
    padding: 1px 0
    margin: 0 -1px

  &__item
    padding: 1px
    width: 33.3333%
    border: 0
    +media('lg')
      width: 50%
    +media('md')
      width: 100%

  &__card
    position: relative;

    img
      display: block;
      max-width 100%
      height: auto;

    &:after
      content: ''
      position: absolute;
      left: 0
      top: 0
      width: 100%
      height: 100%
      background: linear-gradient(to top, #2b1f1f, rgba(#2b1f1f, .25));
      opacity: 0
      anim()
      //+media('md')
      //  opacity: 1

    &:hover:after
      opacity: 1

