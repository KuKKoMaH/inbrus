.contactsPhones
  margin: 33px 0 43px
  +media('md')
    margin: 34px 0 40px

  &__items
    display: flex;
    flex-wrap wrap

  &__item
    width: 500px
    flex-shrink 0
    padding: 30px 0
    +media('md')
      text-align: center;
      width: 100%
      padding: 0
      margin-bottom: 34px
      &:last-child
        margin-bottom: 0

  &__label
    margin-bottom: 12px
    +media('md')
      margin-bottom: 4px

  &__value
    display: inline-block;
    font-size: 41px
    line-height: 1
    font-weight: bold;
    color: $brown1
    border: 0
    margin-bottom: 9px
    +media('md')
      font-size: 22px
      margin-bottom: 4px

