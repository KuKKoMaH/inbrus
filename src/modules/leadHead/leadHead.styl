.leadHead
  margin-bottom: 100px
  +media('md')
    margin-bottom: 40px

  &__image
    position: absolute;
    left: 0
    right: 0
    height: 766px
    background: 50% 50%;
    border-style: cover
    +media('md')
      display: none;

    &--sm
      display: none;
      +media('md')
        display: block;
        height: 615px

  &__content
    position: relative;
    z-index: 1
    padding-top: 80px
    +media('md')
      padding-top: 46px

  &__main
    max-width 560px
    padding-top: 55px
    //min-height 554px
    margin-bottom: 55px
    color: $white
    +media('lg')
      //min-height auto
      text-align: center;
      max-width none
      margin-bottom: 35px
      padding: 0 20px
    +media('md')
      padding: 0
      margin-bottom: 33px

  &__title
    font-size: 42px
    margin-bottom: 25px
    +media('md')
      font-size: 25px
      line-height: 1.35
      margin-bottom: 27px

  &__highlight
    padding-left: 12px
    +media('md')
      line-height: 1.8
      padding: 0 20px
      margin-bottom: -7px

    span
      vertical-align: top;
      color: $white
      background: $brown2
      margin-bottom: 10px
      line-height: 1.4
      letter-spacing 0
      box-decoration-break: clone;
      box-shadow: -12px 0 0 0 $brown2, 14px 0 0 0 $brown2;
      +media('md')
        padding: 4px 0 4px
        font-size: 22px
        line-height: 1.2
        box-shadow: -14px 0 0 0 $brown2, 14px 0 0 0 $brown2;

  &__aside
    position: absolute;
    right: 0
    top: 80px
    width: 470px
    +media('lg')
      position: static;
      padding: 0 20px
      width: 100%
    +media('md')
      padding: 0

    & .modal__content
      padding: 43px 50px
      background: #f8f6f5
      animation none
      max-width none
      +media('md')
        padding: 33px 29px

    & .modal__title
      font-size: 23px
      line-height: 1.32
      margin-bottom: 19px
      +media('md')
        font-size: 22px
        line-height: 1.3
        margin-bottom: 6px

    & .modal__form
      margin-top: 18px
      +media('md')
        margin-top: 25px

    & .input__input
      background: #f8f6f5
      //border-color: #efebe8


  &__bullets
    display: flex;
    max-width 700px
    background: #f2eeec
    +media('lg')
      margin: 0 20px
      max-width none
    +media('md')
      flex-direction column
      margin: 0

  &__bullet
    flex: 1
    padding: 41px 35px 33px
    +media('md')
      position: relative
      padding: 14px 45px 25px 96px

    &:nth-child(2n)
      background: #f8f6f5

  &__icon
    margin-bottom: -4px
    +media('md')
      position: absolute;
      top: 30px
      left: 30px

    svg
      width: 40px
      height: 40px
      fill #8a6552

  &__header
    color: #ba9674
    font-size: 20px
    font-weight: bold;
    margin-bottom: -5px
    +media('md')
      font-size: 16px
      margin-bottom: 0

    span
      font-size: 42px
      +media('md')
        font-size: 26px

  &__text
    +media('md')
      line-height: 1.5
