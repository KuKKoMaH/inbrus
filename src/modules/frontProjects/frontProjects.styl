.frontProjects
  position: relative;
  padding: 103px 0 100px
  +media('md')
    padding: 51px 0 30px

  &__title
    margin-bottom: 50px
    +media('md')
      margin-bottom: 22px

  &__filters
    padding-right: 220px
    margin-bottom: 40px
    +media('lg')
      padding-right: 0

    & .checkbox
      margin-right: 40px
      margin-bottom: 30px
      +media('md')
        display: block;
        margin-right: 0
        margin-bottom: 10px

  &__link
    position: absolute;
    top: 233px;
    left: 50%;
    margin-left: 371px;
    +media('lg')
      position: static;
      text-align: center;
      padding: 30px 0
      margin-left: 0

  &__message
    background: $grey2
    padding: 71px 0 74px
    position: relative;
    +media('md')
      padding: 34px 0 39px

  &__form
    padding-left: 100px
    max-width 760px
    +media('lg')
      padding-left: 0
      max-width none
    +media('md')
      text-align: center;

    &-title
      font-size: 27px
      font-weight: bold;
      line-height: 1.3
      margin-bottom: 24px
      +media('md')
        font-size: 16px
        line-height: 1.5
        margin-bottom: 18px

    &-text
      font-size: 18px
      margin-bottom: 25px
      +media('md')
        font-size: 12px
        margin-bottom: 18px

    &-note
      opacity: .5

    &-button
      position: absolute;
      right: 50%
      margin-right: -487px
      bottom: 80px
      +media('lg')
        position: static;
        margin-top: 23px
        margin-right: 0

  &__items
    display: flex;
    flex-wrap wrap
    margin: -1px
    +media('md')
      margin: 0

  &__item
    width: 33.333%
    //width: 499px
    padding: 1px
    +media('lg')
      width: 50%
    +media('md')
      padding: 0
      width: 100%
