.services
  padding: 55px 0
  +media('md')
    padding: 40px 0 30px

  &__items
    display: flex;
    flex-wrap wrap
    margin: 0 -15px
    +media('md')
      margin: 0

  &__item
    width: 33.3333%
    padding: 15px
    +media('lg')
      width: 50%
    +media('md')
      width: 100%
      padding: 0
      margin-bottom: 10px

  &__card
    background: $grey2
    display: flex;
    align-items center
    border: 0
    //height: 100%
    height: 145px
    padding: 0 50px
    +media('md')
      height: 95px
      padding: 0 30px

    &:hover
      background: $brown1

      & ^[0]__icon svg
        fill: $white

      & ^[0]__text span
        color: $white
        border-color: $brown2

  &__icon
    width: 55px
    margin-right: 25px
    flex-shrink 0
    +media('md')
      width: 45px
      margin-right: 18px

    svg
      fill: $brown1
      width: 55px
      height: 55px
      display: block;
      anim()
      +media('md')
        width: 45px
        height: 45px

  &__text
    line-height: 2.2
    margin-top: -6px

    span
      display: inline;
      color: $black
      letter-spacing .035em
      padding-bottom: 3px
      border-bottom: 1px solid $brown1
      anim()
