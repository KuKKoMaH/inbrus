.projectInfo
  padding: 61px 0 70px
  background: $grey2
  +media('md')
    padding: 33px 0 41px

  .c
    cf()

  &--gallery
    & ^[0]__title
      float: right;
      width: 370px
      +media('lg')
        float: none;
        width: 100%

    & ^[0]__info
      float: right;
      +media('lg')
        float: none;


  &__title
    font-size: 34px
    margin-bottom: 38px
    +media('lg')
      margin-left: 0
    +media('md')
      font-size: 22px
      margin-bottom: 15px

  &__aside
    float: left;
    width: 730px
    margin-top: 9px
    +media('lg')
      float: none;
      width: 100%
      margin-bottom: 40px
    +media('md')
      margin-bottom: 10px

  &__info
    width: 370px
    +media('lg')
      margin-left: 0
      width: 100%
      overflow: hidden;

  &__thumbs
    margin: 5px -5px -5px
    display: flex;
    flex-wrap wrap

  &__thumb
    position: relative;
    width: 25%
    padding: 5px
    overflow: hidden;
    cursor: pointer;

    &:before, &:after
      content: ''
      position: absolute;
      top: 5px
      left: 5px
      right: 5px
      bottom: 5px
      opacity: 0
      anim()

    &:before
      background: $white

    &:after
      border: 4px solid $brown2

    img
      max-width: 100%;

    &:hover
      &:after
        opacity: 1

    &--active
      &:before
        opacity: .75

  &__s
    background: #ba9674
    color: $white
    display: flex;
    align-items center
    padding: 9px 39px
    margin-bottom: 36px
    +media('md')
      padding: 0px 29px
      margin-bottom: 28px

    &-label
      opacity: .75

    &-value
      margin-left: auto;
      font-size: 44px
      font-weight: bold;
      +media('md')
        font-size: 35px

  &__params
    display: flex;
    flex-wrap wrap
    align-items center
    margin: 0 -12px 30px
    +media('md')
      margin: 0 -23px 16px

  &__param
    margin: 12px
    +media('md')
      margin: 12px 23px

    svg
      width: 24px
      height: 24px
      fill #ba9674
      margin-right: 15px
      display: inline-block;
      vertical-align: middle;
      +media('md')
        display: block;
        margin-right: 0
        margin-bottom: 4px
        width: 18px
        height: 18px

  &__material
    margin-bottom: 36px
    +media('md')
      margin-bottom: 27px

    span
      color: #8a6552
      font-weight: 500
      margin-left: 3px

  &__complect
    margin-bottom: 35px
    +media('md')
      margin-bottom: 15px

    & .tabs
      margin-top: 8px

      &__headers
        margin-bottom: 0

      +media('md')
        &__header
          width: 100%
          text-align: center;

  &__price
    font-size: 27px
    font-weight: bold;
    color: #8a6552
    margin-bottom: 38px
    +media('md')
      font-size: 24px
      text-align: center;
      margin-bottom: 27px

    &-old
      color: $black
      opacity: .5
      text-decoration: line-through;
      font-size: 15px
      font-weight: normal;
      display: inline-block;
      vertical-align: middle;
      margin-left: 9px
      +media('md')
        font-size: 12px

  &__form
    background: $brown1
    overflow: hidden;
    position: relative;
    padding: 30px 40px 29px
    +media('md')
      padding: 20px

    &:before
      content ''
      position: absolute;
      background: url(../../images/wood-bg.png)
      width 539px
      height 535px
      opacity: .1
      top: 50%
      left: 50%
      transform translate(-50%, -50%)
      pointer-events none

    .btn
      width: 100%
      padding-top: 13px
      padding-bottom: 13px
      +media('md')
        padding-top: 7px
        padding-bottom: 7px
