.materialInfo
  padding: 112px 0 55px
  +media('md')
    padding: 52px 0 25px

  &__title
    margin-bottom: 63px
    letter-spacing .025em
    +media('md')
      line-height: 1.45
      margin-bottom: 33px

  &__items
    display: flex;
    flex-wrap wrap
    margin: 0 -15px 113px
    +media('md')
      margin: 0 -15px 20px

  &__item
    width: 33.3333%
    padding: 0 15px
    +media('md')
      width: 100%
      margin-bottom: 33px

    &:before
      content ''
      display: block;
      width: 25px
      height: 25px
      border: 8px solid $brown2
      margin-bottom: 24px
      +media('md')
        margin-bottom: 14px

  &__header
    font-size: 18px
    line-height: 1.4
    font-weight: 600
    margin-bottom: 17px
    max-width 340px
    +media('md')
      font-size: 16px
      line-height: 1.5
      max-width 100%
      margin-bottom: 8px

  &__text
    max-width 340px
    +media('md')
      max-width 100%

  &__form
    background: $brown1
    padding: 71px 100px 80px
    color: $white
    overflow: hidden;
    position: relative;
    +media('md')
      padding: 34px 29px 136px

    & .btn
      padding: 23px 30px 25px
      +media('md')
        padding: 15px 0 17px
        width: 100%

    &:before
      content ''
      position: absolute;
      background: url(../../images/wood-bg.png) no-repeat
      transform rotate(90deg)
      width 539px
      height 535px
      left: 50%
      margin-left: -70px;
      top: 51px;
      opacity: .1
      pointer-events none
      +media('md')
        bottom: auto;
        top: 100%
        margin-top: -306px;
        left: 50%;
        margin-left: -249px;

    &-img
      position: absolute;
      bottom: 0
      left: 50%
      margin-left: 137px;
      top: -52px;
      anim()
      +media('lg')
        margin-left: 140px
        top: auto;
        bottom: -100px
      +media('md')
        bottom: auto;
        top: 100%
        margin-top: -215px;
        left: 50%;
        margin-left: -189px;
        transform: scale(0.5);

    &-title
      font-size: 27px
      font-weight: bold;
      line-height: 1.3
      max-width 530px
      margin-bottom: 26px
      +media('md')
        font-size: 16px
        line-height: 1.5
        margin-bottom: 13px

    &-text
      max-width 530px
      margin-bottom: 33px
      +media('md')
        margin-bottom: 18px
