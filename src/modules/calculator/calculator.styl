.calculator
  padding: 8px 0 50px
  +media('md')
    padding: 21px 0 30px

  &__title
    max-width 800px
    margin-bottom: 53px
    +media('md')
      text-align: center;
      margin-bottom: 26px

    span
      color: $brown1
      letter-spacing 0

  &__row
    display: flex;
    margin-bottom: 70px
    +media('lg')
      flex-direction column
      margin-bottom: 30px

  &__select
    width: 270px
    margin-right: 30px
    +media('lg')
      width: 100%
      margin: 0 0 19px

  &__input
    width: 200px
    margin-right: 30px
    +media('lg')
      width: 100%
      margin: 0 0 20px

    .input input
      padding: 18px 22px 19px
      font-size: 10px
      letter-spacing .3em
      +media('md')
        padding: 16px 18px 16px
        font-size: 8px

  &__label
    margin-bottom: 13px
    +media('lg')
      font-size: 12px
      margin-bottom: 3px

  &__result
    flex: 1
    background: $grey2
    display: flex;
    align-items center
    flex-direction column
    justify-content center
    text-align: center;
    margin-top: 8px
    +media('lg')
      padding: 10px 0
      margin-top: 10px

  &__total
    font-size: 27px
    font-weight: bold;
    color: $brown2
    line-height: 1

  &__cols
    display: flex;
    margin: 0 -15px 93px
    +media('lg')
      margin: 0 0 37px
      flex-direction column

  &__col
    width: 33.3333%
    padding: 0 15px
    +media('lg')
      width: 100%
      padding: 0

  &__checkbox
    position: relative;
    display: block;
    cursor: pointer;
    margin-bottom: 32px
    padding-left: 80px
    padding-right: 40px
    +media('md')
      padding-left: 57px
      margin-bottom: 19px
      padding-right: 0
      min-height 30px

    input
      display: none

    span
      display: block
      position: absolute;
      width: 60px
      height: 40px
      left: 0
      top: 0
      background: $grey2
      anim()
      +media('md')
        width: 45px
        height: 30px

      svg
        fill $brown2
        width: 29px
        height: 28px
        position: absolute;
        opacity: .1
        top: 6px
        left: 6px
        anim()
        +media('md')
          top: 5px;
          left: 5px;
          width: 21px
          height: 20px

    input:checked ~ span
      background: $grey1

      svg
        opacity 1
        left: 25px
        +media('md')
          left: 19px

  //&:hover
  //  svg
  //    opacity: .5

  &__header
    font-size: 18px
    line-height: 1.4
    font-weight: 500
    padding-top: 5px
    +media('md')
      font-size: 12px
      padding-top: 0

  &__note
    opacity: .5
    margin-top: -1px
    +media('md')
      font-size: 10px
      line-height: 1.6

  &__form
    background: $brown1
    padding: 71px 100px 80px
    color: $white
    overflow: hidden;
    position: relative;
    +media('md')
      padding: 34px 29px 134px

    & .btn
      padding: 23px 30px 25px
      +media('md')
        padding: 15px 0 17px
        width: 100%

    &:before
      content ''
      position: absolute;
      background: url(../../images/wood-bg.png) no-repeat
      transform rotate(90deg)
      width 539px
      height 535px
      left: 100%
      margin-left: -687px;
      bottom: -28px;
      opacity: .1
      pointer-events none
      +media('md')
        bottom: auto;
        top: 100%
        margin-top: -306px;
        left: 50%;
        margin-left: -249px;

    &-img
      position: absolute;
      bottom: 0
      left: 100%
      margin-left: -513px
      anim()
      +media('lg')
        margin-left: -200px
      +media('md')
        display: none;

    &-img-sm
      display: none;
      +media('md')
        position: absolute;
        display: block;
        bottom: 0
        left: 50%;
        transform translateX(-50%)
        anim()

    &-title
      font-size: 27px
      font-weight: bold;
      line-height: 1.3
      max-width 530px
      margin-bottom: 26px
      +media('md')
        font-size: 16px
        line-height: 1.5
        margin-bottom: 13px

    &-text
      max-width 530px
      margin-bottom: 33px
      +media('md')
        margin-bottom: 18px


