.search
  max-width 810px
  margin: 0 auto
  padding: 60px 20px 65px
  +media('md')
    padding: 32px 20px 40px

  &__form
    position: relative;

    .input__label
      margin-bottom: 20px
      +media('md')
        margin-bottom: 11px

  &__button
    position: absolute;
    top: 63px
    right: 20px
    padding: 11px 21px 11px
    font-size: 12px
    z-index: 1
    +media('md')
      display: block;
      position: static;
      margin: 25px auto 0

  &__links
    margin-top: 15px
    +media('md')
      margin-top: 7px

    & .link
      display: inline-block;
      font-size: 12px
      margin-right: 30px
      +media('md')
        margin-right: 24px

  &__items
    margin-top: 68px
    +media('md')
      margin-top: 26px

  &__item
    display: block;
    background: $grey2
    padding: 35px 40px
    margin-bottom: 15px
    border: 0
    +media('md')
      padding: 27px 29px 23px
      margin-bottom: 10px

    &:hover
      background: $grey1

  &__title
    font-weight: 500
    font-size: 10px
    letter-spacing .3em
    color: $brown1
    margin-bottom: 15px
    text-transform: uppercase;
    +media('md')
      font-size: 8px
      margin-bottom: 10px

  &__more
    margin-top: 66px
    text-align: center;
    +media('md')
      margin-top: 40px

