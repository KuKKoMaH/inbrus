.projectPlan
  padding: 113px 0 60px
  +media('md')
    padding: 53px 0 30px

  &__title
    letter-spacing .025em
    margin-bottom: 49px
    +media('md')
      line-height: 1.45
      margin-bottom: 22px

  &__plans
    display: flex;
    flex-wrap wrap
    //align-items flex-start
    margin: 0 -15px 46px
    +media('md')
      margin: 0 0 31px

  &__plan
    padding: 15px
    width: 50%
    flex-shrink 0
    display: flex;
    flex-direction column
    +media('md')
      width: 100%
      padding: 0
      margin-bottom: 30px

  &__img
    margin-bottom: 25px
    +media('md')
      margin-bottom: 9px

    img
      max-width 100%
      height: auto;

  &__info
    margin-top: auto;
    +media('md')
      display: flex;
      align-items flex-start

  &__name
    font-size: 18px
    font-weight: 500
    display: inline-block;
    +media('md')
      font-size: 12px
      margin-top: 3px

  &__label
    display: inline-block;
    font-size: 21px
    font-weight: 500
    line-height: 1
    color: $white
    background: $brown2
    padding: 4px 13px 5px
    position: relative;
    margin-left: 10px
    +media('md')
      font-size: 16px
      margin-left: auto;
      padding: 5px 13px 6px

    &:before
      content: ''
      position: absolute;
      border-top: 5px solid transparent;
      border-bottom: 5px solid transparent;
      border-right: 6px solid $brown2;
      top: 50%
      margin-top: -6px
      right: 100%

  &__form
    background: $brown1
    padding: 71px 100px 80px
    color: $white
    overflow: hidden;
    position: relative;
    +media('md')
      padding: 34px 29px 138px

    & .btn
      padding: 23px 30px 25px
      +media('md')
        padding: 15px 0 17px
        width: 100%

    &:before
      content ''
      position: absolute;
      background: url(../../images/wood-bg.png) no-repeat
      transform rotate(90deg)
      width 539px
      height 535px
      left: 100%
      margin-left: -698px;
      bottom: -96px;
      opacity: .1
      pointer-events none
      +media('md')
        bottom: auto;
        top: 100%
        margin-top: -306px;
        left: 50%;
        margin-left: -249px;

    &-img
      position: absolute;
      bottom: 0
      left: 100%
      margin-left: -504px
      anim()
      +media('lg')
        margin-left: -200px
      +media('md')
        display: none;

    &-img-sm
      display: none;
      +media('md')
        position: absolute;
        display: block;
        bottom: 0
        left: 50%;
        transform translateX(-50%)
        anim()

    &-title
      font-size: 27px
      font-weight: bold;
      line-height: 1.3
      max-width 530px
      margin-bottom: 26px
      +media('md')
        font-size: 16px
        line-height: 1.5
        margin-bottom: 13px

    &-text
      max-width 530px
      margin-bottom: 33px
      +media('md')
        margin-bottom: 18px
