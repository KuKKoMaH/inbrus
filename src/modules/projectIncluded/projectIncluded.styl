.projectIncluded
  padding: 47px 0 0px
  +media('md')
    padding: 22px 0 0px

  &__title
    text-align: center;
    margin-bottom: 39px
    +media('md')
      margin: 0 20px 17px

  &__outer
    margin-bottom: 20px
    +media('md')
      margin: 0 15px 19px

      .tabs__header
        text-align: center;

  &__inner
    margin-bottom: 40px
    +media('md')
      margin: 0 15px 24px

  .tabs__headers
    justify-content center

  &__item
    display: flex;
    background: #f7f5f4

    +media('md')
      flex-direction column-reverse

  &__aside
    width: 50%
    position: relative;

    &:before
      display: block;
      content ''
      width: 100%
      padding-bottom: 60%

    +media('md')
      width: 100%

    & > *
      position: absolute;
      left: 0
      top: 0
      width: 100%
      height: 100%

  &__content
    position: relative;
    width: 50%
    background: url(../../images/wood-texture-white.jpg)
    padding: 70px 50px 50px 70px
    display: flex;
    flex-direction column
    justify-content space-around
    +media('lg')
      padding: 20px 30px
    +media('md')
      width: 100%
      padding: 35px 20px 23px

  &__image
    width: 100%
    height: 100%
    flex-shrink 0
    background-size: cover
    background-position: 50%
    opacity: 0
    anim()

  &__header
    font-size: 23px
    font-weight: bold;
    line-height: 1.4
    margin-bottom: 21px
    +media('md')
      font-size: 16px
      line-height: 1.5
      margin-bottom: 19px

  &__form
    background: $brown1
    padding: 71px 100px 80px
    color: $white
    overflow: hidden;
    position: relative;
    +media('md')
      padding: 32px 24px 129px

    & .btn
      padding: 23px 30px 25px
      +media('md')
        padding: 15px 0 17px
        width: 100%

    &:before
      content ''
      position: absolute;
      background: url(../../images/wood-bg.png) no-repeat
      transform rotate(90deg)
      width 539px
      height 535px
      left: 50%
      margin-left: -110px;
      bottom: 154px;
      opacity: .1
      pointer-events none
      +media('md')
        bottom: auto;
        top: 100%
        margin-top: -306px;
        left: 50%;
        margin-left: -249px;

    &-img
      position: absolute;
      bottom: 0
      left: 50%
      margin-left: -59px
      anim()
      +media('lg')
        margin-left: 100px
      +media('md')
        display: none;

    &-img-sm
      display: none;
      +media('md')
        position: absolute;
        display: block;
        bottom: 0
        left: 50%;
        transform translateX(-50%)
        anim()

    &-title
      font-size: 27px
      font-weight: bold;
      line-height: 1.3
      max-width 530px
      margin-bottom: 26px
      +media('md')
        font-size: 16px
        line-height: 1.5
        margin-bottom: 13px

    &-text
      max-width 530px
      margin-bottom: 33px
      +media('md')
        margin-bottom: 18px
