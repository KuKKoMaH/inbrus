.relatedServices
  padding-top: 4px

  &__header
    display: flex;
    align-items center
    justify-content space-between
    margin-bottom: 36px
    +media('md')
      margin-bottom: 19px

    .link
      margin-left: auto;
      +media('md')
        margin-left: 0

  &__item
    display: block;
    background: $grey2
    color: $black
    border: 0
    //height: 100%
    //height: 145px
    padding: 45px 50px 47px
    margin-bottom: 10px
    +media('md')
      display: flex;
      align-items center
      height: 95px
      padding: 0 30px

    &:hover
      background: $brown1

      & ^[0]__icon svg
        fill: $white

      & ^[0]__text span
        color: $white
        border-color: $brown2

  &__icon
    margin-bottom: 12px
    +media('md')
      margin: 0 18px 0 0

    svg
      fill: $brown1
      width: 55px
      height: 55px
      display: block;
      margin: 0 auto
      anim()
      +media('md')
        width: 45px
        height: 45px

  &__text
    line-height: 2.35
    text-align: center;
    +media('md')
      text-align: left;
      line-height: 2.45;
      margin-top: -8px;

    span
      display: inline;
      color: $black
      letter-spacing .035em
      padding-bottom: 5px
      border-bottom: 1px solid $brown1
      anim()
      +media('md')
        padding-bottom: 3px
