.leadPresent
  background: url(../../images/wood-texture-white.jpg) 50% 50%;
  padding: 109px 0 117px
  +media('md')
    padding: 41px 0 55px

  &__title
    text-align: center;
    margin-bottom: 48px
    +media('md')
      font-size: 32px
      text-align: left;
      line-height: 1.25
      margin-bottom: 42px

  &__items
    display: flex;
    margin: 0 -15px
    +media('lg')
      margin: 0
      flex-direction column

  &__item
    width: 50%
    padding: 0 15px
    +media('lg')
      width: 100%
      padding: 0
      margin-bottom: 20px
    +media('md')
      margin-bottom: 10px

  &__card
    position: relative;
    overflow: hidden;
    height: 100%
    background: #ba9674
    color: $white
    padding: 70px 160px 53px 70px
    +media('md')
      padding: 34px 50px 41px 29px

    &:before
      content: ''
      position: absolute;
      background: url(../../images/wood-bg.png) no-repeat
      width: 539px
      height: 535px
      opacity: 0.1;
      transform: rotate(90deg);
      top: -204px;
      left: -218px;
      pointer-events none
      +media('md')
        top: -282px;
        left: -356px;

    &--bg2
      &:before
        transform: rotate(90deg);
        top: -94px;
        right: -179px;
        left: auto;
      +media('md')
        padding: 40px 50px 34px 29px

      & ^[0]__header
        margin-top: 18px

  &__header
    margin-top: 42px
    margin-bottom: 34px
    letter-spacing 0.025em
    +media('md')
      font-size: 20px
      line-height: 1.35
      margin-top: 0
      margin-bottom: 17px

  &__sub
    display: flex;
    align-items center
    margin-bottom: -10px
    +media('md')
      margin-bottom: 0

  &__label
    position: relative;
    display: inline-block;
    background: #8a6552
    font-size: 21px
    font-weight: 500
    line-height: 1
    padding: 4px 11px 5px 12px
    margin-right: 14px
    +media('md')
      padding: 6px 7px 6px 8px
      font-size: 15px

    &:after
      content: "";
      position: absolute;
      border-top: 5px solid transparent;
      border-bottom: 5px solid transparent;
      border-left: 6px solid #8a6552;
      top: 50%;
      margin-top: -6px;
      left: 100%;

  &__note
    font-size: 15px
    font-weight: normal;

  &__text
    margin-top: -5px

  &__button
    text-align: center;
    margin-top: 56px
    +media('md')
      margin-top: 45px

  &__image
    position: absolute;
    //+media('md')
    //  display: none;

    &--01
      right: 0
      bottom: 0
      +media('md')
        zoom: .4
        right: -45px;
        bottom: -16px;

    &--02
      top: 0
      right: 30px
      +media('md')
        zoom: .4
        top: 0
        right: -120px;

    &--03
      bottom: 0
      right: 39px
      +media('md')
        zoom: 0.55;
        bottom: 0;
        right: 149px;
