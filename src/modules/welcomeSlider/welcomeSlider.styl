.welcomeSlider
  color: $white
  line-height: 1.25
  position: relative;
  overflow: hidden;

  &__items
    display: flex;

  &__item
    position: relative;
    width: 100%
    flex-shrink 0
    height: 613px
    background: $brown2 50%
    background-size: cover
    +media('md')
      height: 475px

    &.swiper-slide-active
      &:before
        content ''
        position: absolute;
        top: 0
        left: 0
        height: 5px
        background: $brown2
        z-index: 2
        animation welcomeSliderProgress 5s linear 0s 1 forwards

    &:after
      content: ''
      position: absolute;
      left: 0
      top: 0
      width: 100%
      height: 100%
      background: linear-gradient(to top, rgba($black, .9), rgba($black, 0) 75%);
      opacity: .8
      +media('md')
        background: linear-gradient(to top, rgba($black, .9), rgba($black, .2));
        opacity: .9

  &__content
    position: absolute;
    bottom: 0
    left: 0
    width: 100%
    padding-bottom: 79px
    z-index: 1
    +media('md')
      text-align: center;
      padding-bottom: 77px

  &__label
    display: inline-block;
    background: $brown2
    font-size: 35px
    font-weight: bold;
    padding: 4px 25px 7px
    margin-bottom: 22px
    +media('md')
      font-size: 22px
      margin-bottom: 16px
      padding: 0px 13px 4px

  &__title
    font-size: 60px
    font-weight: bold;
    letter-spacing 0
    +media('md')
      font-size: 32px

  &__desc
    font-size: 23px
    margin-top: 30px
    letter-spacing 0
    +media('md')
      font-size: 16px
      margin-top: 15px

  &__btn
    margin-top: 34px
    +media('md')
      margin-top: 26px

  &__pagination
    position: absolute;
    bottom: 77px;
    right: 50%;
    margin-right: -590px;
    +media('lg')
      margin-right: -370px
    +media('md')
      right: 0
      width: 100%
      text-align: center;
      margin-right: 0
      bottom: 28px

  &--paused
    & ^[0]__item.swiper-slide-active:before
      animation: none
      //animation-play-state: paused;

@keyframes welcomeSliderProgress
  from
    width: 0;
  to
    width: 100%
