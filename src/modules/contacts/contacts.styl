.contacts
  margin: 40px 0 70px
  +media('md')
    margin: 40px 0 40px

  &__items
    position: relative;

  &__item
    &:hover
      & ^[0]__content
        background: $grey1

    &--active
      & ^[0]__map
        opacity: 1
        z-index: 1
        +media('md')
          height: 212px

      & ^[0]__content, &:hover ^[0]__content
        background: $brown2
        color: $white

  &__content
    position: relative;
    width: 470px
    background: $grey2
    padding: 41px 70px 38px
    cursor: pointer;
    anim()
    +media('lg')
      padding: 20px 30px 20px
      width: 300px
    +media('md')
      padding: 26px 52px 29px
      width: 100%

    svg
      position: absolute;
      width: 20px
      height: 20px
      fill: $brown1
      left: 38px;
      top: 40px;
      +media('lg')
        left: 6px;
        top: 20px;
      +media('md')
        width: 16px
        height: 16px
        left: 28px;
        top: 26px;

  &__map
    position: absolute;
    left: 470px
    right: 0
    top: 0
    bottom: 0
    background: $grey1
    opacity: 0
    anim()
    +media('lg')
      left: 300px
    +media('md')
      position: relative;
      left: auto;
      right: auto;
      top: auto;
      bottom: auto;
      height: 0
      overflow: hidden;
      anim(.2s)

    .map
      position: absolute;
      left: 0
      top: 0
      width: 100%
      height: 100%
      +media('md')
        height: 213px

  &__label
    font-size: 10px
    font-weight: 500
    letter-spacing .3em
    color: $brown1
    padding-left: 2px
    margin-bottom: 3px
    +media('md')
      font-size: 8px
      margin-bottom: 1px

  &__note
    font-size: 12px
    opacity: .5
    margin-top: 5px
    margin-bottom: 2px
    +media('md')
      margin-top: 2px
      margin-bottom: 1px
      font-size: 10px


