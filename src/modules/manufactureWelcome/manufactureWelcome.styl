.manufactureWelcome
  position: relative;
  background: $brown1 50%
  background-size: cover;
  height: 450px
  +media('md')
    height: auto;

  &:after
    content ''
    position: absolute;
    left: 0
    top: 0
    width: 100%
    height: 100%
    background: linear-gradient(to top, rgba($black, .9), rgba($black, 0) 75%);
    opacity: .8

  .c
    height: 100%
    display: flex;
    flex-direction column
    justify-content center
    padding: 20px 0
    position: relative;
    z-index: 1
    +media('md')
      padding: 64px 20px 41px

  &__title
    padding-left: 21px
    max-width 1000px
    margin-bottom: 26px
    +media('md')
      padding-left: 14px
      margin-bottom: 15px

    span
      vertical-align: top;
      color: $white
      background: $brown2
      margin-bottom: 10px
      line-height: 1.4
      letter-spacing 0
      box-decoration-break: clone;
      box-shadow -20px 0 0 0 $brown2, 22px 0 0 0 $brown2
      +media('md')
        padding: 4px 0 4px
        font-size: 22px
        line-height: 1.2
        box-shadow -14px 0 0 0 $brown2, 14px 0 0 0 $brown2

  &__text
    color: $white
    max-width 670px
    font-size: 18px
    line-height: 1.6
    +media('md')
      font-size: 16px
      line-height: 1.5

    b
      font-weight: 600
